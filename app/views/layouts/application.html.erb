<!DOCTYPE html>
<html>
  <head>
    <title>Star Wars App</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload", defer: true %>
  </head>

  <body class="bg-gray-100">
    <!-- Navigation Bar -->
    <nav class="bg-gray-800 p-4">
      <div class="container mx-auto flex justify-between items-center">
        <!-- Logo -->
        <div class="text-white font-bold text-xl">
          <%= link_to "Star Wars Universe", root_path, class: "hover:text-gray-400" %>
        </div>

        <!-- Links -->
        <div class="space-x-4">
          <%= link_to "Films", films_path, class: "text-white hover:text-gray-400" %>
          <%= link_to "People", people_path, class: "text-white hover:text-gray-400" %>
          <%= link_to "Vehicles", vehicles_path, class: "text-white hover:text-gray-400" %>
        </div>
      </div>
    </nav>

    <!-- Main Content -->
    <div class="container mx-auto p-8">
      <%= yield %>
    </div>
  </body>
</html>
