<h1 class="text-3xl font-bold mb-6 text-center">Star Wars Films</h1>

<turbo-frame id="films-frame">
    <table class="table-auto border-collapse w-full bg-white shadow-md rounded-lg">
    <thead class="bg-gray-100">
        <tr>
        <th class="px-4 py-2 text-left text-gray-600">Title</th>
        <th class="hidden md:table-cell px-4 py-2 text-left text-gray-600">Director</th>
        <th class="hidden md:table-cell px-4 py-2 text-left text-gray-600">Release Date</th>
        </tr>
    </thead>
    <tbody>
        <% @films.each do |film| %>
        <tr class="hover:bg-gray-50 cursor-pointer">
            <td class="border-t px-4 py-2"><%= link_to film["title"], film_path(film["url"].split('/').last), class: "text-blue-500 hover:text-blue-700" %></td>
            <td class="hidden md:table-cell border-t px-4 py-2"><%= film["director"] %></td>
            <td class="hidden md:table-cell border-t px-4 py-2"><%= film["release_date"] %></td>
        </tr>
        <% end %>
    </tbody>
    </table>
</turbo-frame>


<!-- Details container -->
<div id="details-view"></div>